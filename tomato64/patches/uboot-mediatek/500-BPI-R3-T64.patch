From d42a7ffaef25ed7dcec5f1bf22abbacad342b444 Mon Sep 17 00:00:00 2001
From: lancethepants <lancethepants@gmail.com>
Date: Mon, 11 Aug 2025 14:52:00 -0600
Subject: [PATCH] bpi-r3, boot from partition instead of fit0

---
 bananapi_bpi-r3_emmc_env  | 2 +-
 bananapi_bpi-r3_sdmmc_env | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/bananapi_bpi-r3_emmc_env b/bananapi_bpi-r3_emmc_env
index 12924761..18ea044b 100644
--- a/bananapi_bpi-r3_emmc_env
+++ b/bananapi_bpi-r3_emmc_env
@@ -2,7 +2,7 @@ ipaddr=192.168.1.1
 serverip=192.168.1.254
 loadaddr=0x46000000
 console=earlycon=uart8250,mmio32,0x11002000 console=ttyS0
-bootargs=root=/dev/fit0 rootwait
+bootargs=root=/dev/mmcblk0p6 rootwait
 bootcmd=if pstore check ; then run boot_recovery ; else run boot_emmc ; fi
 bootconf=config-mt7986a-bananapi-bpi-r3
 bootconf_base=config-mt7986a-bananapi-bpi-r3
diff --git a/bananapi_bpi-r3_sdmmc_env b/bananapi_bpi-r3_sdmmc_env
index 2304342c..83372f81 100644
--- a/bananapi_bpi-r3_sdmmc_env
+++ b/bananapi_bpi-r3_sdmmc_env
@@ -2,7 +2,7 @@ ipaddr=192.168.1.1
 serverip=192.168.1.254
 loadaddr=0x46000000
 console=earlycon=uart8250,mmio32,0x11002000 console=ttyS0
-bootargs=root=/dev/fit0 rootwait
+bootargs=root=/dev/mmcblk0p6 rootwait
 bootcmd=if pstore check ; then run boot_recovery ; else run boot_sdmmc ; fi
 bootconf=config-mt7986a-bananapi-bpi-r3
 bootconf_base=config-mt7986a-bananapi-bpi-r3
